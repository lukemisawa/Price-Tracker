      <main>
        <div class="mainbody">
          <div id="cloud-intro"></div>
          <div class="container">
            <div class="transparent-div" style="flex-direction: column;">
              <h1 style="text-align: center; font-size: 1.5em;">Upload Flight Prices/Details In</h1>
           
              <div id="flightDataContainer" class="flight-container">
                <!-- Flight data will be displayed here -->
                <% for (let flight of flightDataArray) { %>
                  <div class="flight">
                <ul>
                    <li><%= flight.airlineName %></li>
                    <li><%= flight.price %></li> 
                    <li><%= flight.flightDeparture1 %> - <%= flight.flightArrival1 %></li>
                    <li>Departure Time: <%= flight.departureTime1 %></li>
                    <li>Arrival Time: <%= flight.arrivalTime1 %></li>
                    <li>Flight Time: <%= flight.totalFlightTime1 %> minutes </li>
                    <li><%= flight.totalStops1 %> stops </li>
                    <li><%= flight.flightDeparture2 %> - <%= flight.flightArrival2 %></li>
                    <li>Departure Time: <%= flight.departureTime2 %></li>
                    <li>Arrival Time: <%= flight.arrivalTime2 %></li>
                    <li>Flight Time: <%= flight.totalFlightTime2 %> minutes </li>
                    <li><%= flight.totalStops2 %> stops</li>
                    
                   </ul>
                  </div>
                  <% } %>
              
              </div>
                     
      
              
            </div>
          </div>
        </div>
